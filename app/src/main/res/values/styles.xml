<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textStyleTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_xx_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorTertiory</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="cardStyleDefault">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="textStyleContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="testStyleSubtitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_xx_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorTertiory</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="testStyleDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_x_small</item>
        <item name="android:layout_marginTop">@dimen/margin_x_small</item>
        <item name="android:layout_marginRight">@dimen/margin_x_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_x_small</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
